# MySQL CDC Environment Variables Configuration
# Copy this file to .env and modify as needed

# Source Database Configuration
SRC_DSN=srcuser:srcpass@tcp(mysql-source:3306)/
SRC_DB=offercraft
SRC_TABLE=channel_transactions

# Target Database Configuration  
TGT_DSN=tgtuser:tgtpass@tcp(mysql-target:3306)/
TGT_DB=offercraft
TARGET_TABLE=channel_transactions_temp

# Performance Tuning
PARALLEL_WORKERS=4
BATCH_SIZE=5000

# Retry Configuration
DB_RETRY_ATTEMPTS=5
DB_RETRY_MAX_WAIT=10
FULLLOAD_MAX_RETRIES=3
FULLLOAD_DROP_ON_RETRY=true

# CDC Configuration
CHECKPOINT_TABLE=cdc_checkpoints
CHECKPOINT_EVERY=100
CHECKPOINT_WRITE_SECONDS=5
BINLOG_SERVER_ID=9999

# Health Check and Metrics
HEALTH_PORT=8080
